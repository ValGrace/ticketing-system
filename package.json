{
  "name": "ticket-resell-platform",
  "version": "1.0.0",
  "description": "A secure marketplace for buying and selling tickets",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-http-header-size=32768 dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "jest --testPathPattern=test/e2e",
    "test:security": "jest --testPathPattern=test/security",
    "test:performance": "jest --testPathPattern=test/performance --maxWorkers=1",
    "test:all": "npm run test:integration && npm run test:e2e && npm run test:security && npm run test:performance",
    "migrate:test": "ts-node src/utils/migrationRunner.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down --rmi all --volumes",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test",
    "search:index": "ts-node src/utils/searchIndexer.ts"
  },
  "keywords": [
    "tickets",
    "marketplace",
    "resell",
    "platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "@types/compression": "^1.8.1",
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "aws-sdk": "^2.1489.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "stripe": "^14.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "undici": "^7.16.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-elasticsearch": "^0.17.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/cors": "^2.8.15",
    "@types/elasticsearch": "^5.0.43",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.9",
    "@types/nodemailer": "^6.4.13",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.6.0"
  },
  "engineStrict": true
}

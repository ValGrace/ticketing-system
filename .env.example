# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ticket_platform
DATABASE_TEST_URL=postgresql://postgres:postgres@postgres:5432/ticket_platform_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ticket-platform-uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_LISTING=5

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_ENVIRONMENT=sandbox
MPESA_SHORT_CODE=174379
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=http://localhost:3000/api/payments/mpesa/callback
MPESA_TIMEOUT_URL=http://localhost:3000/api/payments/mpesa/timeout

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5

# Monitoring and Logging Configuration
LOG_LEVEL=info
ELASTICSEARCH_AUTH=false
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Alerting Configuration
DEVOPS_EMAIL=devops@ticketplatform.com
DEVOPS_PHONE=+1234567890
DEV_EMAIL=dev@ticketplatform.com
OPS_EMAIL=ops@ticketplatform.com
OPS_PHONE=+1234567890

# External Monitoring Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# Database Connection Pool
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ticket_platform
DB_USER=postgres
DB_PASSWORD=postgres